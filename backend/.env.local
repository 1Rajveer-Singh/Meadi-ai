# Environment Configuration for AgenticAI HealthGuard Backend
# Local Development Environment (outside Docker)

# MongoDB Configuration (localhost)
MONGODB_URI=mongodb://admin:healthguard2025@localhost:27017/healthguard?authSource=admin
DATABASE_NAME=healthguard

# Redis Configuration (localhost)
REDIS_URI=redis://:healthguard2025@localhost:6379
REDIS_DB=0

# MinIO Object Storage Configuration (localhost)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=healthguard2025
MINIO_SECURE=false
MINIO_BUCKET=healthguard

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-healthguard2025
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# AI API Keys (Replace with your actual keys)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
APP_NAME=AgenticAI HealthGuard
VERSION=1.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/dicom,application/dicom

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s